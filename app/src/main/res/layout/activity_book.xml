<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BookActivity">
    <LinearLayout
        android:id="@+id/desclivro"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/image"
            android:layout_margin="10dp"
            android:layout_width="70dp"
            android:layout_height="101dp"
            android:src="@drawable/semimagem"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:layout_alignRight="@id/image"
            />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/editora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="editora"
                android:layout_alignRight="@id/image"
                />
        </LinearLayout>
    </LinearLayout>
<Button
    android:id="@+id/adicionarwishlist"
    android:layout_below="@+id/desclivro"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="Adicionar a WISHLIST"
    />
    <ListView
        android:id="@+id/listcomentarios"
        android:layout_below="@+id/adicionarwishlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/stars"
        />

    <LinearLayout
        android:id="@+id/stars"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_above="@+id/bottom"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="Stars:"
            >

        </TextView>
        <ImageButton
            android:id="@+id/star1"
            android:src="@drawable/star_ativa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"

            />
        <ImageButton
            android:id="@+id/star2"
            android:src="@drawable/star_inativa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"

            />
        <ImageButton
            android:id="@+id/star3"
            android:src="@drawable/star_inativa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"

            />
        <ImageButton
            android:id="@+id/star4"
            android:src="@drawable/star_inativa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"

            />
        <ImageButton
            android:id="@+id/star5"
            android:src="@drawable/star_inativa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"

            />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
    <EditText
        android:id="@+id/descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        />
        <ImageButton
            android:id="@+id/enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/send"
            android:background="@null"
            />
    </LinearLayout>
</RelativeLayout>